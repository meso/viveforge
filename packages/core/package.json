{
  "name": "@vibebase/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "packageManager": "npm@10.9.2",
  "scripts": {
    "dev": "wrangler dev -c wrangler.local.toml",
    "deploy": "test -f wrangler.local.toml && wrangler deploy -c wrangler.local.toml || wrangler deploy",
    "build": "pwd && ls -la && ls -la node_modules | head -20 && echo 'Dependencies already installed by Cloudflare'",
    "deploy:local": "wrangler deploy -c wrangler.local.toml",
    "db:init": "wrangler d1 execute DB --file=./migrations/consolidated_schema.sql",
    "test": "vitest run",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@block65/webcrypto-web-push": "^1.0.2",
    "@hono/zod-validator": "^0.2.0",
    "hono": "^4.7.11",
    "nanoid": "^5.1.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "miniflare": "^3.20240129.0",
    "vitest": "^1.2.0",
    "wrangler": "^4.20.0"
  }
}
