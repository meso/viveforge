{
  "name": "@vibebase/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:button": "npm run db:init && wrangler deploy -c wrangler.deploy.toml",
