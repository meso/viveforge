    "test": "vitest",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "hono": "^4.7.11",
    "nanoid": "^5.1.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "miniflare": "^3.20240129.0",
    "vitest": "^1.2.0",
    "wrangler": "^4.20.0"
  }
}
